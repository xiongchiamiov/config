[alias]
	c = commit
	co = checkout
	st = status
	b = branch
	d = diff
	ds = diff --cached
	dc = diff --cached
	lg = log --graph --oneline
	ap = add -p
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace = fix,-indent-with-non-tab,cr-at-eol
	excludesfile = ~/.gitignore
[user]
	name = xiongchiamiov
	email = xiong.chiamiov@gmail.com
[github]
	user = xiongchiamiov
[merge]
	tool = kdiff3
[push]
	default = current
